@model ArtworkDataPartial


<div class="card">
    <img class="card-img-top" src=@Model.ImageUrl alt="Card image cap">
    <div class="card-body">
        <h6 class="card-title">@Model.Title, @Model.Date</h6>
        <p class="card-text">
            @Model.Artist
        </p>
        @*<a href="#!" class="btn btn-outline-dark btn-sm">More details</a>*@
        @{
            var parms = new Dictionary<string, string>
                            {
                                { "id", Model.Id.ToString() },
                                { "backController", "Gallery" }
                            };
        }

        <a asp-controller="ArtworkDetails" asp-action="Index" asp-all-route-data="parms" class="btn btn-outline-dark btn-sm">More details</a>
    </div>
</div>